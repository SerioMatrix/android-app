<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gardion.android.family.client">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.gardion.android.family.client.logic.StrongSwanApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GardionTheme">
        <activity
            android:name="com.gardion.android.family.client.logic.FlowController"
            android:label="@string/main_activity_name"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- <intent-filter> -->
            <!-- <action android:name="org.strongswan.android.action.START_PROFILE" /> -->


            <!-- <category android:name="android.intent.category.DEFAULT" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name="com.gardion.android.family.client.ui.VpnProfileDetailActivity" />
        <activity
            android:name="com.gardion.android.family.client.ui.TrustedCertificatesActivity"
            android:label="@string/trusted_certs_title" />
        <activity
            android:name="com.gardion.android.family.client.ui.SelectedApplicationsActivity"
            android:label="@string/profile_select_apps" />
        <activity
            android:name="com.gardion.android.family.client.ui.LogActivity"
            android:label="@string/log_title" />
        <activity
            android:name="com.gardion.android.family.client.ui.RemediationInstructionsActivity"
            android:label="@string/remediation_instructions_title" />
        <activity
            android:name="com.gardion.android.family.client.ui.VpnProfileSelectActivity"
            android:label="@string/gardion_shortcut">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gardion.android.family.client.ui.VpnProfileImportActivity"
            android:excludeFromRecents="true"
            android:label="@string/profile_import"
            android:taskAffinity="">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:mimeType="application/vnd.strongswan.profile" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:host="*" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\.sswan" />
                <data android:pathPattern=".*\\..*\\..*\\.sswan" />
                <data android:pathPattern=".*\\..*\\.sswan" />
                <data android:pathPattern=".*\\.sswan" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gardion.android.family.client.ui.TrustedCertificateImportActivity"
            android:label="@string/import_certificate"
            android:theme="@style/AlertDialogTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/x-x509-ca-cert" />
                <data android:mimeType="application/x-x509-server-cert" />
                <data android:mimeType="application/x-pem-file" />
                <data android:mimeType="application/pkix-cert" />
            </intent-filter>
        </activity>

        <service
            android:name="org.strongswan.android.logic.VpnStateService"
            android:exported="false" />
        <service
            android:name="org.strongswan.android.logic.CharonVpnService"
            android:exported="false"
            android:permission="android.permission.BIND_VPN_SERVICE">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

        <!-- Gardion receivers -->
        <receiver
            android:name="com.gardion.android.family.client.security.GardionDeviceAdminReceiver"
            android:description="@string/app_name"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/gardion_device_admin_receiver" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.gardion.android.family.client.security.BootCompletedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.gardion.android.family.client.logic.UserPresentReceiver">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <activity android:name="com.gardion.android.family.client.gardionui.GardionEnableProfileActivity" />
        <activity android:name="com.gardion.android.family.client.gardionui.GardionPasswordCreatorActivity" />
        <activity android:name="com.gardion.android.family.client.gardionui.GardionLoginActivity" />
        <activity android:name="com.gardion.android.family.client.gardionui.GardionVpnActivity" />
        <activity android:name="com.gardion.android.family.client.gardionui.EnableProfileActivity" />
        <activity
            android:name="com.gardion.android.family.client.gardionui.GardionPopupActivity"
            android:launchMode="singleInstance" />

        <!--Gardion services-->
        <service android:name="com.gardion.android.family.client.security.CheckAdminService" />
        <service android:name="com.gardion.android.family.client.security.GardionConnectionService" />
    </application>

</manifest>